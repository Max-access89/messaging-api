generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Plan {
  id            Int      @id @default(autoincrement())
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  plan_value    Float
  plan_currency String
  tenure        String
}

model ForeCast {
  id            Int          @id @default(autoincrement())
  created_at    DateTime     @default(now())
  updated_at    DateTime     @updatedAt
  forecast_from ForeCastFrom
  tenure        Tenure
}

model ForeCastByLeader {
  id                   Int      @id @default(autoincrement())
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt
  sales_person         String
  assigned_plan        Float
  assigned_opportunity String
  forecast_amount      Float?
}

enum Tenure {
  Quarterly
  Biannual
  Annual
}

enum ForeCastFrom {
  Opportunity
}
